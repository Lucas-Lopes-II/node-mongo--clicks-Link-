<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Links</title>
</head>
<body>
    <div class="container">
        <h1>Links</h1>
        <a href="/add">Add Link</a>
        <%for(let i = 0; i < links.length; i++){%>
            <div class="card" id="<%=links[i]._id%>">
                <div class="info">
                    <h2><%=links[i].title%></h2>
                    <p><%=links[i].description%></p>
                    <p><a class="text-muted" href="/<%=links[i].title%>"><%=links[i].url%></a></p>
                    <p class="text-info">Clicks: <%=links[i].clicks%></p>
                </div>
                <div class="field-btn">
                    <button class="btn" onclick="deleteLink('<%=links[i]._id%>')">Delete</button>
                    <a href="/" class="edit-btn">Edit</a>
                </div>
            </div>
        <%}%>
    </div>
    <script>
        const deleteLink = id => {
            fetch('/' + id, { method: 'DELETE' }).then(res => {
                if(res.status == 200){
                    res.text().then(linkId => {
                        document.getElementById(linkId).remove();
                        alert('Link deleted successfully');
                    });
                }else{
                    res.json().then(err => alert(err.message));
                };
            });
        };
    </script>
</body>
</html>